{
  "name": "topper.top-backend",
  "version": "0.0.1",
  "description": "Backend for TOPPER.top â€” Universal Rating Platform (Version 0.0.1)",
  "main": "dist/server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && vite build",
    "start": "node dist/server.js",
    "dev": "concurrently \"ts-node-dev --respawn --transpile-only --project tsconfig.json src/api/server.ts\" \"vite --host\"",
    "frontend": "vite --host",
    "frontend:build": "vite build",
    "frontend:preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,js}\" \"public/js/**/*.{js,ts}\" --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,html,css,svelte,scss,less,yaml,yml}\"",
    "test": "vitest --run --reporter verbose",
    "test:watch": "vitest",
    "seed": "ts-node scripts/seed.ts",
    "clean": "rm -rf dist && rm -rf frontend-dist",
    "prepare": "husky install",
    "generate:types": "openapi-typescript api-spec.yaml --output src/types/api.gen.ts",
    "docs": "npx serve public -p 8080"
  },
  "lint-staged": {
    "**/*.{ts,js,json,md,html,css,svelte,scss,less,yaml,yml}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/language-server": "^0.14.29",
    "@types/dom-speech-recognition": "^0.0.1",
    "@types/node": "^20.19.23",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jsdom": "^27.0.1",
    "lint-staged": "^13.0.0",
    "openapi-typescript": "^7.10.1",
    "prettier": "^2.0.0",
    "swagger-ui-dist": "^5.29.5",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "typescript-language-server": "^5.0.1",
    "vite": "^5.0.0",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^1.0.0",
    "vscode-langservers-extracted": "^4.10.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "uuid": "^13.0.0"
  }
}
